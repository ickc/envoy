# nix-darwin/brews.nix
# Declarative list of Homebrew formulae for nix-darwin `homebrew.brews`.
# This file is imported from `flake.nix` (e.g. `brews = import ./brews.nix;`).
[
  # Interact with Google Gemini AI models from the command-line
  "gemini-cli"
  # CLI for ImageOptim, ImageAlpha and JPEGmini
  "imageoptim-cli"
  # LLM inference in C/C++
  "llama.cpp"
  # Sudoless performance monitoring for Apple Silicon processors
  "macmon"
  # Mac App Store command-line interface
  "mas"
  # CLI for Mermaid library
  "mermaid-cli"
  # Media player based on MPlayer and mplayer2
  "mpv"
  # Swiss-army knife of markup format conversion
  "pandoc"
  # Open-source industry-supported PDF/A validation
  "verapdf"
]
